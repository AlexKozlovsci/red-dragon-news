{% extends 'base.html.twig' %}

{% block title %}
    Sign In
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 text-center">
                <img src="{{ asset('public/img/logo.png') }}" class="auth-logo">
            </div>

            <div class="col-sm-4 col-sm-offset-4">
                <div class="card-square mdl-card mdl-shadow--2dp">
                    <div class="mdl-card__title mdl-card--expand mdl-card--border row first-color">
                        <div class="col-sm-9">
                            <h2 class="mdl-card__title-text">Welcome back</h2>
                        </div>
                        <div class="col-sm-3">
                            <a href={{ path('sign_up') }}>
                                <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect col-sm-12">Sign up</button>
                            </a>
                        </div>

                    </div>

                    <form action="{{ path('sign_in') }}" method="post">
                        <div class="row auth-inputs margin-escape">
                            <div class="col-sm-6 col-sm-offset-3">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    <input class="mdl-textfield__input" type="email" required id="email" name="_username" value="{{ last_username }}">
                                    <label class="mdl-textfield__label" for="email">E-mail</label>
                                </div>
                            </div>
                            <div class="col-sm-6 col-sm-offset-3">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    <input class="mdl-textfield__input" type="password" required id="password" name="_password">
                                    <label class="mdl-textfield__label" for="password">Password</label>
                                </div>
                            </div>
                        </div>

                        <div class="mdl-card__actions row margin-escape">
                            <div class="col-sm-4 col-sm-offset-4">
                                <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect col-sm-12">Sign in</button>
                            </div>
                        </div>
                    </form>
                    <h6 class="text-center">Forgot your password? <a href="#">Reset password</a></h6>
                </div>
                {% if error %}
                    <h6 class="text-center alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </h6>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

