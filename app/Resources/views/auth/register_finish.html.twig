{% extends 'base.html.twig' %}

{% block title %}
    Sign Up
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 text-center">
                <img src="{{ asset('public/img/logo.png') }}" class="auth-logo">
            </div>

            <div class="col-sm-4 col-sm-offset-4">
                <div class="card-square mdl-card mdl-shadow--2dp">
                    <div class="mdl-card__title mdl-card--expand mdl-card--border row first-color">
                        <div class="col-sm-9">
                            <h2 class="mdl-card__title-text">Registration continue</h2>
                        </div>
                    </div>
                    <h6 class="text-center">
                        Registration is almost completed!<br>
                        Check your mail <b>{{ email }}</b> and follow instructions.<br>
                        After you will be able to <a href="{{ path('signin') }}">Sign in</a><br>
                    </h6>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

