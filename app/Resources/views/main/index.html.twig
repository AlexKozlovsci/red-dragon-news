{% extends 'base_main.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-sm-8 col-sm-offset-2 margin-top-20">
        <div class="layout-background mdl-card mdl-shadow--2dp">
            <div class="row">
                {% if news|length == 0 %}
                    <h3 class="text-center first-color-text margin-top-70">Nothing found</h3>
                {% endif %}
                {% set i = 0 %}
                {% for one_news in news %}
                    <div class="col-sm-12">
                        <a href="{{ path('news-page', {'id': one_news.id}) }}" class="news-href">
                            <div class="row">
                                {% if (i%2==0) %}
                                    <div class="col-sm-4 text-center margin-top-20">
                                        {% if one_news.picture is null %}
                                            <img src="{{ asset('public/img/no-photo.png') }}" class="news-small-picture">
                                        {% else %}
                                            <img src="{{ asset('uploads/user_images/' ~ one_news.picture) }}" class="news-small-picture">
                                        {% endif %}
                                    </div>
                                    <div class="col-sm-7">
                                        <h4 class="news-title">{{ one_news.title }}</h4>
                                        <p>{{ one_news.text|sliceAdvanced(780)|raw }}</p>
                                    </div>
                                {% else %}
                                    <div class="col-sm-7 col-sm-offset-1">
                                        <h4 class="news-title">{{ one_news.title }}</h4>
                                        <p>{{ one_news.text|sliceAdvanced(780)|raw }}</p>
                                    </div>
                                    <div class="col-sm-4 text-center margin-top-20">
                                        {% if one_news.picture is null %}
                                            <img src="{{ asset('public/img/no-photo.png') }}" class="news-small-picture">
                                        {% else %}
                                            <img src="{{ asset('uploads/user_images/' ~ one_news.picture) }}" class="news-small-picture">
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </div>
                        </a>
                    </div>
                    <div class="col-sm-10 col-sm-offset-1">
                        <hr class="news-hr" />
                    </div>
                    {% set i = i + 1 %}
                {% endfor %}
                <div class="navigation text-center">
                    {{ knp_pagination_render(news) }}
                </div>
            </div>
        </div>
    </div>
</div>
    <dialog class="mdl-dialog">
        <h4 class="mdl-dialog__title">Choose type</h4>
        <div class="mdl-dialog__content">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <select id="subscription" class="mdl-textfield__input">
                    <option value="daily">Daily</option>
                    <option value="weekly">Weekly</option>
                    <option value="monthly">Monthly</option>
                </select>
                <label class="mdl-textfield__label" for="subscription">Subscription type</label>
            </div>
        </div>
        <div class="mdl-dialog__actions">

            <button type="button" class="mdl-button close">Close</button>
            <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" id="subscribe">Subscribe!</button>
        </div>
    </dialog>
{% endblock %}

